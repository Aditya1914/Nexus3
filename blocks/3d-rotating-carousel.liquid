<style>
  .bento-section-{{ carousel_id }} {
    background: {{ section_background }};
    background: linear-gradient(135deg, {{ section_background }} 0%, #111111 100%);
    position: relative;
    overflow: hidden;
    padding: 60px 20px 120px;
    font-family: "Open Sans", system-ui, -apple-system, sans-serif;
    font-weight: 300;
  }

  .bento-container-{{ carousel_id }} {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .bento-header-{{ carousel_id }} {
    margin-bottom: 60px;
    position: relative;
    z-index: 10;
  }

  .bento-title-{{ carousel_id }} {
