{% comment %}
  Renders an inline header search that expands horizontally within the navbar

  Accepts:
  - input_id: {String} Id for the search input element (required)

  Usage:
  {% render 'header-search', input_id: 'My-Id'%}
{% endcomment %}

<navbar-search class="navbar-search-wrapper">
  {%- if settings.predictive_search_enabled -%}
    <predictive-search class="navbar-search-container" data-loading-text="{{ 'accessibility.loading' | t }}">
      <form action="{{ routes.search_url }}" method="get" role="search" class="navbar-search-form-inner">
        <input
          class="navbar-search-input"
          id="{{ input_id }}"
          type="search"
          name="q"
          value="{{ search.terms | escape }}"
          placeholder="What're we looking for ?"
          role="combobox"
          aria-expanded="false"
          aria-owns="predictive-search-results"
          aria-controls="predictive-search-results"
          aria-haspopup="listbox"
          aria-autocomplete="list"
          autocorrect="off"
          autocomplete="off"
          autocapitalize="off"
          spellcheck="false"
        >
        <input type="hidden" name="options[prefix]" value="last">
        
        <button type="reset" class="navbar-search-reset reset__button field__button{% if search.terms == blank %} hidden{% endif %}" aria-label="{{ 'general.search.reset' | t }}">
          <span class="svg-wrapper">
            {{- 'icon-reset.svg' | inline_asset_content -}}
          </span>
        </button>
        
        <button type="submit" class="navbar-search-submit field__button" aria-label="{{ 'general.search.search' | t }}">
          <span class="svg-wrapper">
            {{- 'icon-search.svg' | inline_asset_content -}}
          </span>
        </button>
        
        <div class="predictive-search predictive-search--navbar" tabindex="-1" data-predictive-search>
          {%- render 'loading-spinner', class: 'predictive-search__loading-state' -%}
        </div>
      </form>
      
      <button type="button" class="navbar-search-toggle header__icon" aria-label="{{ 'general.search.search' | t }}">
        <span class="svg-wrapper">
          {{- 'icon-search.svg' | inline_asset_content -}}
        </span>
      </button>
      <span class="predictive-search-status visually-hidden" role="status" aria-hidden="true"></span>
    </predictive-search>
  {%- else -%}
    <search-form class="navbar-search-container">
      <form action="{{ routes.search_url }}" method="get" role="search" class="navbar-search-form-inner">
        <input
          class="navbar-search-input"
          id="{{ input_id }}"
          type="search"
          name="q"
          value="{{ search.terms | escape }}"
          placeholder="What're we looking for ?"
        >
        <input type="hidden" name="options[prefix]" value="last">
        
        <button type="reset" class="navbar-search-reset reset__button field__button{% if search.terms == blank %} hidden{% endif %}" aria-label="{{ 'general.search.reset' | t }}">
          <span class="svg-wrapper">
            {{- 'icon-reset.svg' | inline_asset_content -}}
          </span>
        </button>
        
        <button type="submit" class="navbar-search-submit field__button" aria-label="{{ 'general.search.search' | t }}">
          <span class="svg-wrapper">
            {{- 'icon-search.svg' | inline_asset_content -}}
          </span>
        </button>
      </form>
      
      <button type="button" class="navbar-search-toggle header__icon" aria-label="{{ 'general.search.search' | t }}">
        <span class="svg-wrapper">
          {{- 'icon-search.svg' | inline_asset_content -}}
        </span>
      </button>
    </search-form>
  {%- endif -%}
</navbar-search>

<script src="{{ 'navbar-search.js' | asset_url }}" defer="defer"></script>
{%- if settings.predictive_search_enabled -%}
  <script src="{{ 'predictive-search.js' | asset_url }}" defer="defer"></script>
{%- endif -%}